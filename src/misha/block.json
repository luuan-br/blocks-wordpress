{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "instanta-waves-blocks/form",
	"title": "Subscription form",
	"description": "This block displays a subscription form",
	"category": "text",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"icon": "buddicons-pm",
	"attributes": {
		"heading": {
			"type": "string",
			"source": "html",
			"selector": "h3",
			"default": "Like this post? Join my mailing list!"
		},
		"buttonText": {
			"type": "string",
			"source": "text",
			"selector": "span",
			"default": "Subscribe"
		},
		"list_id": {
			"type": "string"
		},
		"doubleoptin": {
			"type": "boolean"
		},
		"formColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"customFormColor": {
			"type": "string"
		}
	},
	"supports": {
		"align": true,
		"color": {
			"background": true,
			"enableContrastChecker": true,
			"gradients": true,
			"link": true,
			"text": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	}
}
